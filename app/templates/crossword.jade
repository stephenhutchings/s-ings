.content-wrap
  .crossword-letters
    for letter, i in clue.word.split("")  
      - var reveal = (show.indexOf(i) > -1 && letter) || "";

      if /[A-Z]/.test(letter)
        .crossword-letter(class=reveal ? "disabled" : "")
          .crossword-mask= reveal
          input.crossword-input(value=reveal disabled=!!reveal)

  .crossword-definition
    .crossword-definition-text
      = clue[mode]
      | 
      span.text-muted.crossword-length (#{length})

  hr

  .text-muted
    for type in ["Quick", "Cryptic"]
      span.crossword-mode.btn-no-bg.btn-text(
        class=type.toLowerCase() == mode ? "active" : ""
        data-mode=type.toLowerCase()
      )= type

    span.btn-no-bg.btn-text(title="Your record is #{score.record} points")
      span.crossword-score= score.total 
      |  points
