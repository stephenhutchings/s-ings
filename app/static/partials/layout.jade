block config
  - var page = {};
  - page.description  = "Hi, Iâ€™m Stephen Hutchings. ";
  - page.description += "I design and build well-crafted digital ";
  - page.description += "interfaces, interactions & experiences.";

doctype html
html.no-js(lang="en")
  head
    block head
      meta(charset="utf-8")
      meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
      meta(
        name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1"
      )
      
      title
        block title
          != page.title
          |  - Stephen Hutchings, front-end designer and developer in Sydney

      meta(name="title"       content=page.title)
      meta(name="description" content=page.description)
      meta(name="keywords"    content=package.keywords.join(", "))
      meta(name="author"      content="Stephen Hutchings")
      meta(name="copyright"   content="Stephen Hutchings 2015")
      meta(name="robots"      content="index, follow")

      meta(http-equiv="content-type" content="text/html;UTF-8")
      meta(http-equiv="cache-control" content="cache")
      meta(http-equiv="content-language" content="en")
      meta(http-equiv="revisit-after" content="31 days")

      link(rel="shortcut icon" href="/img/favicon.png")

      block css
        link(rel="stylesheet"    href="/css/app.css")

  body(class=page.class)
    block page
      #outbound
      #inbound(data-class=page.class)
          block header
            include header

          block body
            #content
              .content-wrap
                block content
                hr
                block footer
                  include footer

            include crossword

    block scripts
      script(type="text/javascript" src="/js/vendor.js")
      script(type="text/javascript" src="/js/app.js")    
      script(type="text/javascript").
        $(document).ready(function(){
          require("app").initialize();
        })
