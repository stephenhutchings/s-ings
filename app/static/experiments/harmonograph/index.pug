extends ../../partials/experiment

block append config
  - page.title = "Harmonograph"
  - page.experiment = "harmonograph/view";

block append page
  #controls
    label.clearfix
      span.fl-l Distance A
      input#d1.fl-r(type="range" min=0 max=800 value=200)
    label.clearfix
      span.fl-l Distance B
      input#d2.fl-r(type="range" min=0 max=800 value=200)
    label.clearfix
      span.fl-l Distance C
      input#d3.fl-r(type="range" min=0 max=800 value=300)
    hr
    label.clearfix
      span.fl-l Period A
      input#p1.fl-r(type="range" step=0.1 min=0.1 max=2.4 value=0.1)
    label.clearfix
      span.fl-l Period B
      input#p2.fl-r(type="range" step=0.1 min=0.1 max=2.4 value=1.2)
    label.clearfix
      span.fl-l Period C
      input#p3.fl-r(type="range" step=0.1 min=0.1 max=2.4 value=0.4)
    hr
    label.clearfix
      span.fl-l Variance A
      input#v1.fl-r(type="range" step=0.002 min=-0.1 max=0.1 value=0)
    label.clearfix
      span.fl-l Variance B
      input#v2.fl-r(type="range" step=0.002 min=-0.1 max=0.1 value=0)
    label.clearfix
      span.fl-l Variance C
      input#v3.fl-r(type="range" step=0.002 min=-0.1 max=0.1 value=0)
    hr
    label.clearfix
      span.fl-l Duration
      input#p4.fl-r(type="range" min=1 max=2048 value=1024)
    
    label.clearfix
      span.fl-l Friction
      input#friction.fl-r(type="range" step=0.01 min=0 max=1 value=0.3)

block append scripts
  script
    include:coffee view.coffee
