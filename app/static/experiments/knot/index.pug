extends ../../partials/experiment

block append config
  - page.title = page.experiment = "knot/view";

block append page
  #controls
    label
      span.fl-l Sides
      input#sides(type="range" min=2 max=800 value=2)
    label
      span.fl-l Period
      input#period(type="range" min=0 max=80 value=2)
    label
      span.fl-l Line Width
      input#stroke(type="range" min=0.2 max=2 value=1 step="0.1")
    label
      span.fl-l Debug
      input#debug.checkbox-hidden(type="checkbox")
      .checkbox

block experiment
  script
    include:coffee view.coffee
