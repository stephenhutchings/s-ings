    #item-2.gallery-item.pv-xxl.ph-lg.bg-lt.flex-evenly(
      data-view="views/font-selector"
      data-target="#font-tester"
      data-label="#font-label"
      data-weights=project.font.weights
    )
      .mx-md.txt-left
        nav.pv-sm
          .flex-grid
            label.txt-tu 
              .fl-l Weight
              input.fl-l(type="range" value="4" name="weight" min=1 max=_.size(project.font.weights))

            #font-tester-mask
              | Svenska&nbsp;
              span#font-label Regular 17px

            label.txt-tu 
              .fl-l Size
              input.fl-l(type="range" value="17" name="size" min=12 max=96)

        #font-tester-wrap.f-g-400
          #font-tester.of-auto(contenteditable)
            style
              :sass
                #font-tester-wrap
                  border-top: 1px solid
                  border-bottom: 1px solid

                #font-tester
                  height: 440px
                  word-break: break-all
                  margin: 0 -8px

                  p
                    margin-bottom: 8px

            include:marked story.md

    #item-3.gallery-item.pv-xxl.ph-lg.flex-evenly.txt-center.bg-hl
