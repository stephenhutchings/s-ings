  style
    :sass
      #font-tester-wrap
        border-top: 1px solid
        border-bottom: 1px solid

      #font-tester
        height: 440px
        word-break: break-all
        margin: 0 -8px

        p
          margin-bottom: 8px

      #font-tester-mask
        position: absolute
        top: -80px
        height: 960px
        width: 960px
        left: 50%
        margin-left: -480px
        border-radius: 480px
        padding-top: 80px

      .digit
        width: 0.7em
        display: inline-block

