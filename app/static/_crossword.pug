extends partials/layout

block content
  style.
    .crossword {
      width: 850px;
    }
    .letter {

      float: left;
      width: 32px;
      height: 32px;
      font-size: 18px;
      line-height: 32px;
      margin: 0 -1px -1px 0;
      border: 1px solid rgba(0,0,0,0.2);
      position: relative;
    }
    .letter input {
      padding: 0;
      width: 100%;
      height: 100%;
      font: inherit;
      border: none;
      text-align: center;
      text-transform: uppercase;
    }

    .letter[data-clue]:before {
      content: attr(data-clue);
      position: absolute;
      top: 0px;
      left: 0px;
      font-size: 9px;
      line-height: 1em;
      padding: 1px 2px;
    }

    .empty {
      background: black;
    }

    .letter input:focus {
      outline: none;
      background: rgb(200,230,240);
    }

  .crossword(data-view="views/crossword-test")
    for row in _.range(25)
      for col in _.range(25)
        .letter.empty
          input(type="text")
