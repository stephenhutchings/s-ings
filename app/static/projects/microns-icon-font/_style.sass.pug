:sass
  @font-face
    font-family: 'microns'
    font-weight: normal
    font-style: normal
    src: url('/fonts/microns/microns.eot')
    src: url('/fonts/microns/microns.eot?#iefix') format('embedded-opentype'), url('/fonts/microns/microns.woff') format('woff'), url('/fonts/microns/microns.woff2') format('woff2')

  .mu,
  [class^="mu-"]
    font-family: 'microns'
    font-style: normal
    font-weight: normal
    speak: none
    display: inline-block
    text-decoration: inherit
    height: 1em
    line-height: 1
    font-size: 1em
    -webkit-font-smoothing: antialiased
    font-smoothing: antialiased
    text-rendering: optimizeLegibility
    user-select: none

for group in project.icons
  for icon in group.list
    | .#{icon.class}:before {
    |   content: "#{'\\' + icon.code}"
    | }

:sass
  // Page specific styles
  .page-microns
    #examples
      .col-wrap
        margin-bottom: 1em

    #icons
      &.search
        h4
          color: rgba(#fff, 0.3)

    #icon-grid
      margin: 0 -20px

      h4
        transition: 300ms
        color: rgba(#fff, 0.7)

    #icon-search-bar
      background: rgba(#fff, 0.1)
      border-radius: 4px
      margin-bottom: 1em
      line-height: 24px
      padding: 8px
      height: 24px
      font-weight: 400

      @media (max-width: 820px)
        height: 64px

        label
          display: block
          float: none

      .mu
        font-size: 24px
        float: left
        margin-right: 8px

    #icon-search-label .mu-search
      font-size: 24px
      .search &
        color: #456fff

      @media (max-width: 820px)
        position: absolute

    #icon-search
      font: inherit
      border: none
      background: none
      width: 100px
      padding: 0
      margin: 0
      color: inherit
      border-right: 1px solid #fff
      margin-right: 1em
      line-height: 24px
      box-shadow: none
      border-radius: 0
      -webkit-appearance: none

      &:focus
        outline: none

      @media (max-width: 820px)
        width: 100%
        padding-left: 32px
        box-sizing: border-box
        float: none
        padding-bottom: 8px
        border-right: 0
        border-bottom: 1px solid #fff
        margin-bottom: 8px

    @media (max-width: 820px)
      #icon-details
        display: block
        padding: 0 4px

      .mu-search

    .icon-name,
    .icon-class,
    .icon-code
      margin-right: 4px
      vertical-align: middle

    .icon-group
      float: left
      padding: 8px 20px

    .icon-list
      font-size: 24px
      line-height: 1
      margin: -4px -8px

      @media (min-width: 480px)
        white-space: nowrap

    .icon
      padding: 8px
      border-radius: 2px
      transition: all 300ms

      &.active
        background: rgba(#fff, 0.2)

      &.inactive
        opacity: 0.2

    .txt-20
      font-size: 20px
    .txt-24
      font-size: 24px
    .txt-28
      font-size: 28px
    .txt-32
      font-size: 32px

    .toolbar
      border-radius: 3px
      line-height: 1em
      width: max-content
      max-width: 100%
      overflow: hidden

      .mu
        font-size: 1em

    .trackbar
      width: 306px
      float: left
      height: 2px
      margin: 9px 8px
      border-radius: 1.5px

      @media (max-width: 800px)
        width: 120px
        margin: 14px 8px

    .trackpos
      position: absolute
      left: 0

    .mu-caret-down
      margin: 0 -6px 0 -8px
      min-width: 0

    .toolset
      margin: 6px 0
      padding: 3px
      float: left
      position: relative
      border: 0 solid #cfdee6

      + .toolset
        border-left-width: 1px

      a
        padding: 4px
        float: left
        border-radius: 1px
        margin: -6px 1px

      @media (max-width: 800px)
        margin: 0 0 -1px
        border: 0

        a
          margin: 0

    .toolbar-font
      display: inline-block
      width: 80px
      font-family: Monospace

    .toolbar-square
      padding: 4px

    .modal,
    .toolbar-square
      box-shadow: 0 3px 8px rgba(#000, 0.1)

      .mu
        min-width: 1em

        text-align: center
      a:hover
        background: #f3f5f6

    .modal
      .modal-title
        font-size: 32px
        border-bottom: 1px solid #cfdee6
        position: relative
        line-height: 1em

      .modal-title
        padding: 12px 16px

      .modal-body
        padding: 4px 16px

      .mu-menu,
      .mu-cancel
        padding: 4px 0
        height: 1em
        line-height: 1em

      .mu-cancel
        position: absolute
        right: 13px
        top: 13px
        padding: 4px

    .todos
      margin-bottom: 0
      li
        border-bottom: 1px solid #cfdee6
        padding: 8px 0
        margin: 0

    .input-wrap
      line-height: 40px
      color: #19334c
      font-weight: 400
      font-size: 16px
      padding: 0 24px 0 8px
      border: 1px solid #cfdee6
      background: #fff
      border-radius: 3px
      margin-bottom: 1em
      width: 208px
      position: relative
      outline-color: #98a3b1

      @media (max-width: 800px)
        width: 100%

      input,
      select
        outline-color: #98a3b1

      &:hover
        border-color: #98a3b1

      select,
      input
        -webkit-appearance: none
        border: none
        color: inherit
        font: inherit
        padding: inherit
        margin: 0 -24px 0 -8px
        border-radius: 0
        box-shadow: none
        background: none
        width: 100%
        height: 100%

        &:focus
          outline: 3px auto #98a3b1

      select
        width: calc(100% + 32px)

    .input-focus
      &:focus
        outline: 3px auto #98a3b1

      &:focus-within
        border-color: transparent

    .input-success
      color: #09c109
      border-color: #09c109
      input:focus
        outline-color: #09c109
      &:hover
        border-color: darken(#09c109, 12)

    .input-error
      color: #ef3571
      border-color: #ef3571
      input:focus
        outline-color: #ef3571
      &:hover
        border-color: darken(#ef3571, 20)

    .input-icon
      position: absolute
      pointer-events: none
      right: 8px
      top: 8px

    .radio-wrap,
    .check-wrap
      float: left
      overflow: hidden
      padding-right: 20px
      cursor: pointer

      input[type="radio"],
      input[type="checkbox"]
        position: absolute
        margin-left: -40px
        width: 1px
        height: 1px
        z-index: -10
        -webkit-appearance: none

      .radio-switch,
      .check-switch
        line-height: inherit
        margin-right: 8px

      input:checked + .radio-switch:before
        content: "\E757"

      input:focus + .radio-switch
        color: #456fff

      input:checked + .check-switch:before
        content: "\E754"

      input:focus + .check-switch
        color: #456fff

    .toolbar-glow
      color: rgba(#fff, 0.9)
      background: #0a1826

      .toolset
        border-left-color: lighten(#0a1826, 12)
      a:hover
        color: #fff
        text-shadow: 0 0 16px #fff

    td
      border-top: 1px solid #cfdee6
      transition: all 200ms
      padding: 0.5em 0
      line-height: 1.3

    td, th
      &:not(:last-child)
        padding-right: 0.5em

    tr:hover td
      background: #f3f5f6

    .tr-group
      td
        position: relative
        vertical-align: top
        padding: 0.8em 0.5em 0.8em 0
        background: none !important

    section > h2
      margin: 1em auto
      width: max-content
      padding: 1em 2em 3em
      border-top: 3px solid

    #table table
      font-size: 85%

    .icon-grid
      position: relative
      margin-bottom: 8px

      .mu
        position: absolute
        top: 0
        left: 50%
        transform: translateX(-50%)
        font-size: 256px
        mix-blend-mode: multiply

      figcaption
        position: absolute
        left: 1px
        bottom: 3px
        opacity: 0.5

      img
        max-width: 100%
        max-height: 100%

      @media (max-width: 800px)
        width: 144px
        height: 144px

        .mu
          font-size: 144px

    .ligature
      line-height: 24px

      .mu
        width: 1.125em
        text-align: center

    .well
      background: #d0dfe6
      border-radius: 4px
      border: 1px solid #b0c9d6
      color: #607e90
      line-height: 1.2
      overflow: hidden
      padding: 8px

      display: flex
      flex-direction: row
      justify-content: center
      align-items: center
      text-align: left

      .mu
        margin-right: 8px

      .msg
        max-width: 80%

      @media (max-width: 800px)
        justify-content: flex-start

    .well-warn
      background: #efcddd
      border-radius: 4px
      border: 1px solid #e3abc1
      color: #894f65
