doctype html
block vars
  - var bodyclass = null;
html(lang='en')
  head
    block head
      meta(charset='utf-8')
      meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
      meta(name='viewport', content='width=device-width')
      title S...INGS | #{page.title}

      meta(name="title", content=page.title)
      meta(name="description", content=locals.description)

      link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=locals.description)
      link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Lora:400,400italic|Source+Sans+Pro:300,300italic')
      link(rel='stylesheet', href='/css/main.css')

  body(class=bodyclass)

    header#header
      block header
        h1
          a(href="/")= locals.name

        div.content-wrap
          nav
            each url, title in locals.navigation
              - var klass = locals.page.metadata.title == title ? "active" : "";
              a(class=klass, href=url)=title
          h2.description= locals.description

    div#content
      div.content-wrap
        block content

    footer#footer
      div.content-wrap
        block footer
          section.about
            img(width=40, height=40, src="/img/portrait.png")
            !=contents.partials['colophon.md'].html
          section.copy
            p &copy; #{ new Date().getFullYear() } #{ locals.owner }
